<tr id=<%= "post_#{post.id}" %>>
	<td><%= link_to post.id, edit_post_path(post), :remote => true %></td>
	<td><%= post.nombre.capitalize %></td>
	
	<td>
		<%= link_to  image_tag('view1.png'), post, :remote => true,  :rel => "tooltip", :title => "Mostrar", :class => 'btn btn-link'%>
		<%= link_to image_tag('editar1.png'), edit_post_path(post),  :remote => true,  :rel => "tooltip", :title => "Editar", :class => 'btn btn-link'%>
	</td>
</tr>