<%= javascript_include_tag "fecha" %>

<h2>¿Eres Nuevo? Regístrate</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>


<%= devise_error_messages! %>

<div class="row">
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :nombre1, class: "form-control", autofocus: true, :label => "Primer nombre:", :required => true %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :nombre2, class: "form-control", :label => "Segundo nombre:"  %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :fecha_nacimiento, :as => :string, :required => true,  :input_html => {  :class => "datepicker " }, :label => "Fecha nacimiento:" %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :apellido1, class: "form-control", :label => "Primer apellido:", :required => true %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :apellido2, class: "form-control", :label => "Segundo apellido:" %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :cedula, class: "form-control", :label => "Cedula:", :required => true %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :profesion, class: "form-control", :label => "Profesión:", :required => true %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :estado_civil, class: "form-control", :label => "Estado Civil:", :required => true %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :direccion, class: "form-control", :label => "Dirección:", :required => true %>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :celular, class: "form-control", :label => "Celular:" %>
        </div>
    </div>
    <div class="col-md-4">

        <div class="col-sm-10">
            <%= f.input :telefono, class: "form-control", :label => "Telefono:" %>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-10">
            <%= f.input :tarjeta_profesional, class: "form-control", :label => "Tarjeta Profesional:" %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-11">
        <div class="col-md-12">
            <%= f.input :perfil, class: "form-control", :label => "Ingresa tu pefil:", as: :text %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="col-sm-10">
            <%= f.input :email, class: "form-control" %>
        </div>
    </div>
    <div class="col-md-3">
        <div class="col-sm-10">
            <%= f.input :password, autocomplete: "off", class: "form-control" %>
        </div>
    </div>
    <div class="col-md-3">
        <div class="col-sm-10">
            <%= f.input :password_confirmation, autocomplete: "off", class: "form-control", :placeholder => "placeholder text" %>
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputFile">Sube tu imagen:</label>
        <%= f.file_field :avatar, class: "help-block" %>
    </div>
</div>


<div class="row">
    <div class="col-md-4 boton-registrar">
        <%= f.submit "Registrate", class: "btn btn-primary" %>
    </div>
</div>


<% end %>